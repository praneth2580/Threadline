# Threadline environment variables
# Copy this file to .env and adjust as needed.
# .env is gitignored and used for local overrides.

# Debug logging (electron + electron-dev.js).
# Set to 1 or true to see step logs and [main] / [db] / [scraper] / [preload] messages.
THREADLINE_DEBUG=1

# Vite dev server URL. Set by electron-dev.js when running npm run dev.
# Override if your UI runs on a different host/port.
VITE_DEV_SERVER_URL=http://localhost:5173

# Scraper (Playwright): run browser headless or headed.
# true / 1 = headless, false / 0 = headed (visible window).
# If unset: headed in dev, headless when app is packaged.
SCRAPE_HEADLESS=false
