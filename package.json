{
  "name": "threadline",
  "version": "1.0.0",
  "main": "electron/dist/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:ui\" \"npm:dev:electron\"",
    "dev:ui": "cd ui && npm run dev",
    "build:electron": "cd electron && tsc",
    "dev:electron": "wait-on tcp:5173 && npm run build:electron && VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "postinstall": "CXXFLAGS=\"-std=c++20\" electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^25.2.0",
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
